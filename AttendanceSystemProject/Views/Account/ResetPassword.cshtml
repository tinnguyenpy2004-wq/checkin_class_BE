@model AttendanceSystemProject.ViewModels.ResetPasswordVm
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Đặt lại mật khẩu</h2>
@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UserId)
    @Html.HiddenFor(m => m.Purpose)
    <div class="form-group">
        <label>Mã OTP</label>
        @Html.TextBoxFor(m => m.Code, new { @class = "form-control", maxlength = 6, required = "required" })
        @Html.ValidationMessageFor(m => m.Code)
    </div>
    <div class="form-group">
        <label>Mật khẩu mới</label>
        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(m => m.NewPassword)
    </div>
    <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
    <a href="@Url.Action("Login")" class="btn btn-link">Đăng nhập</a>
}

