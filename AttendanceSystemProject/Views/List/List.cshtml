@model dynamic
<!DOCTYPE html>
<html>
<head>
    <title>Danh sách theo Vai trò</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-bold mb-4">@ViewBag.Greeting</h1>
        <p class="text-lg mb-6">@ViewBag.RoleText</p>

        @if (ViewBag.Role == "Admin")
        {
            @Html.Partial("ListForAdmin", (AttendanceSystemProject.ViewModels.AdminViewModel)Model)
        }
        else if (ViewBag.Role == "Teacher")
        {
            @Html.Partial("ListForTeacher", (AttendanceSystemProject.ViewModels.TeacherViewModel)Model)
        }
        else
        {
            @Html.Partial("ListForStudent", (AttendanceSystemProject.ViewModels.StudentViewModel)Model)
        }
    </div>
</body>
</html>