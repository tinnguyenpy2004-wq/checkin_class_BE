@model AttendanceSystemProject.ViewModels.AdminViewModel

<div class="space-y-8">

    <!-- Danh sách Người dùng -->
    <div>
        <h2 class="text-2xl font-semibold mb-3">Danh sách Người dùng</h2>
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <table class="min-w-full leading-normal">
                <thead>
                    <tr class="border-b-2 border-gray-200 bg-gray-50 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        <th class="px-5 py-3">ID</th>
                        <th class="px-5 py-3">Tên đăng nhập</th>
                        <th class="px-5 py-3">Họ và Tên</th>
                        <th class="px-5 py-3">Email</th>
                        <th class="px-5 py-3">Vai trò</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.AllUsers)
                    {
                        <tr class="border-b border-gray-200 hover:bg-gray-50">
                            <td class="px-5 py-4 text-sm">@user.UserId</td>
                            <td class="px-5 py-4 text-sm">@user.Username</td>
                            <td class="px-5 py-4 text-sm">@user.FullName</td>
                            <td class="px-5 py-4 text-sm">@user.Email</td>
                            <td class="px-5 py-4 text-sm">@user.Role</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Danh sách Lớp học -->
    <div>
        <h2 class="text-2xl font-semibold mb-3">Danh sách Lớp học</h2>
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <table class="min-w-full leading-normal">
                <thead>
                    <tr class="border-b-2 border-gray-200 bg-gray-50 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        <th class="px-5 py-3">ID Lớp</th>
                        <th class="px-5 py-3">Tên Lớp</th>
                        <th class="px-5 py-3">Mã Lớp</th>
                        <th class="px-5 py-3">Giáo viên</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cls in Model.AllClasses)
                    {
                        <tr class="border-b border-gray-200 hover:bg-gray-50">
                            <td class="px-5 py-4 text-sm">@cls.ClassId</td>
                            <td class="px-5 py-4 text-sm">@cls.ClassName</td>
                            <td class="px-5 py-4 text-sm">@cls.Code</td>
                            <td class="px-5 py-4 text-sm">@cls.TeacherName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Danh sách Sự kiện -->
    <div>
        <h2 class="text-2xl font-semibold mb-3">Danh sách Sự kiện</h2>
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <table class="min-w-full leading-normal">
                <thead>
                    <tr class="border-b-2 border-gray-200 bg-gray-50 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        <th class="px-5 py-3">ID Sự kiện</th>
                        <th class="px-5 py-3">Tên Sự kiện</th>
                        <th class="px-5 py-3">Mã Sự kiện</th>
                        <th class="px-5 py-3">ID Người tổ chức</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var evt in Model.AllEvents)
                    {
                        <tr class="border-b border-gray-200 hover:bg-gray-50">
                            <td class="px-5 py-4 text-sm">@evt.EventId</td>
                            <td class="px-5 py-4 text-sm">@evt.EvenName</td>
                            <td class="px-5 py-4 text-sm">@evt.Code</td>
                            <td class="px-5 py-4 text-sm">@evt.OrganizerId</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Danh sách Khoa -->
    <div>
        <h2 class="text-2xl font-semibold mb-3">Danh sách Khoa</h2>
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <table class="min-w-full leading-normal">
                <thead>
                    <tr class="border-b-2 border-gray-200 bg-gray-50 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        <th class="px-5 py-3">ID Khoa</th>
                        <th class="px-5 py-3">Tên Khoa</th>
                        <th class="px-5 py-3">Mã Khoa</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dept in Model.AllDepartments)
                    {
                        <tr class="border-b border-gray-200 hover:bg-gray-50">
                            <td class="px-5 py-4 text-sm">@dept.DepartmentId</td>
                            <td class="px-5 py-4 text-sm">@dept.DepartmentName</td>
                            <td class="px-5 py-4 text-sm">@dept.Code</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>