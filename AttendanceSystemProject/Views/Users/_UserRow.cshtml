@model AttendanceSystemProject.Models.User

<tr id="user-row-@Model.UserId">
    <td>@Model.Username</td>
    <td>@Model.FullName</td>
    <td>@Model.Email</td>
    <td>
        <span id="status-text-@Model.UserId" class="badge @(Model.IsActive ? "badge-success" : "badge-secondary")">
            @(Model.IsActive ? "Active" : "Locked")
        </span>
    </td>
    <td>
        <button type="button" class="btn btn-info btn-sm js-view-details" data-id="@Model.UserId" data-toggle="modal" data-target="#detailsModal">
            Details
        </button>
        |
        <button type="button" class="btn btn-warning btn-sm js-edit-user" data-id="@Model.UserId">
            Edit
        </button>
        |
        <button type="button" class="btn btn-danger btn-sm js-delete-user" data-id="@Model.UserId" data-name="@Model.FullName">
            Delete
        </button>
        |
        <button type="button"
                class="btn @(Model.IsActive ? "btn-secondary" : "btn-primary") btn-sm js-toggle-lock"
                data-id="@Model.UserId"
                data-status="@Model.IsActive.ToString().ToLower()">
            <span id="lock-text-@Model.UserId">@(Model.IsActive ? "Lock" : "Unlock")</span>
        </button>
    </td>
</tr>